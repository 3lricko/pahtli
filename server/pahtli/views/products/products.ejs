  <!DOCTYPE html/>
  <html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>Products</h1>
    <p>Product Catalog.</p>

    <label>Search: </label><input type='text' id='searchBox'/>
    <h1><a href="/admin/products/update">+</a></h1>
    <div id="photos">
      <table>
       <% products.forEach(function(product) { %>
       <tr>
         <td>
           <div class="photo">
            <h1><a href="/admin/products/delete?name=<%=product.name%>">-</a></h1>  
            <h2><b><%=product.name%></h2></b>
            <img src='<%=product.image%>'/>
            <p class="p-box"><%-product.description%></p>
          </div>
        </td>
      </tr>
      <% }) %>
    </table>
  </div>
</body>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.5.0/jquery.min.js"  type="text/javascript"></script>
<script type="text/javascript">
  $(document).ready(function() {
    $('#searchBox').keydown(function(e) {

      if (e.which === 13) {
        window.location = "/admin/products?name="+ $('#searchBox').val();
        return false;
      }
    });
  });
</script>
</html>
